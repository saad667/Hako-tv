const player=videojs('player');
const searchInput=document.getElementById('searchInput');
const channelList=document.getElementById('channelList');
const favoritesBtn=document.getElementById('favoritesBtn');
let favorites=JSON.parse(localStorage.getItem('favorites')||'[]');
let selectedChannel=null;
let showingFavoritesOnly=false;

function toggleFavorite(name){
    if(favorites.includes(name)) favorites=favorites.filter(f=>f!==name);
    else favorites.push(name);
    localStorage.setItem('favorites',JSON.stringify(favorites));
}

function buildChannelElement(ch){
    const div=document.createElement('div');
    div.className='channel';

    const left=document.createElement('div');
    left.className='left';
    const label=document.createElement('span');
    label.textContent=ch.name;
    left.appendChild(label);

    const star=document.createElement('span');
    star.className='star';
    star.textContent=favorites.includes(ch.name)?'ğŸ’›':'ğŸ¤';
    star.title=favorites.includes(ch.name)?'Ø¥Ø²Ø§Ù„Ø© Ù…Ù† Ø§Ù„Ù…ÙØ¶Ù„Ø©':'Ø£Ø¶Ù Ø¥Ù„Ù‰ Ø§Ù„Ù…ÙØ¶Ù„Ø©';
    star.addEventListener('click',(e)=>{
        e.stopPropagation();
        toggleFavorite(ch.name);
        renderChannels();
    });

    div.appendChild(left);
    div.appendChild(star);

    div.addEventListener('click',()=>{
        selectedChannel=ch.name;
        document.querySelectorAll('.channel').forEach(c=>c.classList.remove('active'));
        div.classList.add('active');
        try{
            const type=ch.url.endsWith('.m3u8')?'application/x-mpegURL':'video/mp4';
            player.src({src:ch.url,type});
            player.play(); // ØªØ´ØºÙŠÙ„ ØªÙ„Ù‚Ø§Ø¦ÙŠ Ø¹Ù†Ø¯ Ø§Ù„Ø¶ØºØ· Ø¹Ù„Ù‰ Ø§Ù„Ù‚Ù†Ø§Ø©
        }catch(e){}
    });

    return div;
}

function renderChannels(){
    const term=searchInput.value.trim().toLowerCase();
    channelList.innerHTML='';
    let list=showingFavoritesOnly? channels.filter(c=>favorites.includes(c.name)) : channels;

    list.forEach(ch=>{
        if(term && !ch.name.toLowerCase().includes(term)) return;
        const el=buildChannelElement(ch);
        if(selectedChannel===ch.name) el.classList.add('active');
        channelList.appendChild(el);
    });
}

searchInput.addEventListener('input',renderChannels);
favoritesBtn.addEventListener('click',()=>{
    showingFavoritesOnly=!showingFavoritesOnly;
    favoritesBtn.textContent=showingFavoritesOnly?'ğŸ’› Ø¹Ø±Ø¶ ÙƒÙ„ Ø§Ù„Ù‚Ù†ÙˆØ§Øª':'ğŸ’›Ù…ÙØ¶Ù„Ø©';
    renderChannels();
});

window.addEventListener('beforeunload',()=>{localStorage.setItem('favorites',JSON.stringify(favorites));});

renderChannels();
